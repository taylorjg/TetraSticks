<Window x:Class="TetraSticks.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetraSticks"
        xmlns:view="clr-namespace:TetraSticks.View"
        mc:Ignorable="d"
        Title="TetraSticks"
        ResizeMode="NoResize"
        Height="690"
        Width="780"
        WindowStartupLocation="CenterScreen"
        >

    <Window.Background>
        <VisualBrush TileMode="Tile" Viewport="0,0,0.2,0.2">
            <VisualBrush.Visual>
                <Image Source="Images\Pattern - Apple Wood@2x.png" />
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>

    <StackPanel Margin="20" Orientation="Vertical">

        <Grid>
            <view:BoardControl x:Name="BoardControl" Width="544" Height="544" />
        </Grid>

        <DockPanel Margin="0,20,0,0" LastChildFill="True">
            <Label Content="Tetra stick to omit:"  Visibility="Hidden" />
        </DockPanel>

    </StackPanel>

</Window>
